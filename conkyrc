TEXT
${alignc}${execi 60 lsb_release -d | cut -f 2| tr "[:upper:]" "[:lower:]"}
${font mono:size=10}${alignc}${uptime}

${wireless_essid}${alignr}${addr wlo1}


batt ${battery_percent BAT0}% ${battery_bar BAT0}


cpu0 ${cpu cpu0}% ${cpubar cpu0}
cpu1 ${cpu cpu1}% ${cpubar cpu1}
cpu2 ${cpu cpu2}% ${cpubar cpu2}
cpu3 ${cpu cpu3}% ${cpubar cpu3}


ram $memperc% ${membar}


root ${alignr}${fs_used /} / ${fs_size /}
${fs_bar /}${if_mounted /media/paul/ENIGMA}
enigma ${alignr}${fs_used /media/paul/ENIGMA} / ${fs_size /media/paul/ENIGMA}
${fs_bar /media/paul/ENIGMA}$endif
${if_mounted /media/paul/HULK}hulk ${alignr}${fs_used /media/paul/HULK} / ${fs_size /media/paul/HULK}
${fs_bar /media/paul/HULK}$endif

${alignc}Dropbox: ${execi 6 dropbox status}
